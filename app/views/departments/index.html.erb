<h1><font size = +16>All Departments</font></h1>
<h4>Click on the department to see items in that department</h4>
<p><%= link_to "Create A New Department", new_department_path %><hr />

<% @departments.each do |department| %>
    <h2><%= department.name %><br />
    <font size = -1><%= link_to "View",  department_path(department) %></font>
    <font size = -1><%= link_to "Edit", edit_department_path(department) %></font>
    <font size = -1><%= link_to "Delete", department_path(department), method: :delete%>
<% end %>